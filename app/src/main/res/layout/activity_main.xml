<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/productsans"
        android:text="Calculator"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textview_text_size_2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_screen"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/shape_screen_rectangle"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_calculator">

        <HorizontalScrollView
            android:id="@+id/horizontal_scrollView_expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="14dp">


            <TextView
                android:id="@+id/textView_expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/textview_text_size_5"
                android:scrollHorizontally="true"/>

        </HorizontalScrollView>


        <HorizontalScrollView
            android:id="@+id/horizontal_scrollView_javab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="14dp">

            <TextView
                android:id="@+id/textView_javab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/textview_text_size_3"
                android:scrollHorizontally="true"/>


        </HorizontalScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_screen">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/button_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="C"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_parantezBaz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="("
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_parantezBaste"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text=")"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_taghsim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="/"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:weightSum="3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/button_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="7"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="8"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="9"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_zarb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="*"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:weightSum="3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="4"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="5"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="6"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_menha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="-"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:weightSum="3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/button_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="1"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="2"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="3"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_jam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="+"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:weightSum="3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">


                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:layoutDirection="rtl"
                    android:text=">"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="0"
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="."
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_mosavi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_circle"
                    android:text="="
                    android:textColor="?attr/colorOnSecondary"
                    android:textSize="@dimen/textview_text_size_1"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


